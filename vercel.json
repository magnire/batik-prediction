{
  "version": 2,
  "functions": {
    "api/*.py": {
      "runtime": "python3.9"
    }
  },
  "builds": [
    { "src": "api/*.py",   "use": "@vercel/python" },
    {
      "src": "api/*.py",
      "use": "@vercel/python",
     "config": { "runtime": "python3.9" }
    },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "installCommand": "python3.9 -m pip install --no-cache-dir ./vendor/tflite_runtime-2.5.0.post1-cp39-cp39-linux_x86_64.whl && python3.9 -m pip install --no-cache-dir -r requirements.txt",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.py" },
    { "src": "/(.*)",      "dest": "/index.html" }
  ]
}
